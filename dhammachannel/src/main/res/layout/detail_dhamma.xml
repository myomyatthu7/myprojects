<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/detail_bg"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rOutTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tvDetailTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/test_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/title_bg"
            android:gravity="center"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRotate"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/screen_rotation"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>


        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_margin="7dp"
            android:layout_below="@+id/rOutTitle"
            android:layout_above="@+id/rout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvDetailDesc"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
            </ScrollView>

            <ScrollView
                android:id="@+id/scrollViewFrg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible">

                <RelativeLayout
                    android:id="@+id/rOut_mp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </RelativeLayout>
            </ScrollView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rout"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnmyan"
                android:textSize="18sp"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                android:background="@drawable/btn_translate"
                android:text="@string/myan_pyan"
                android:singleLine="true"
                android:layout_width="165dp"
                android:layout_height="match_parent"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnIncrease"
                android:text="@string/a_in"
                android:layout_toEndOf="@id/btnmyan"
                style="@style/btn_inde"
                android:background="@drawable/btn_inde"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDecrease_l"
                style="@style/btn_inde"
                android:background="@drawable/btn_inde_l"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDecrease"
                style="@style/btn_inde"
                android:background="@drawable/btn_inde"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnPause"
                style="@style/play_pause"
                android:background="@drawable/pause"
                android:visibility="invisible"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnPlay"
                style="@style/play_pause"
                android:background="@drawable/play"
                />
        </RelativeLayout>

</RelativeLayout>