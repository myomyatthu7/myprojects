<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:elevation="100dp"
    android:background="@android:color/transparent"
    app:cardCornerRadius="15dp"
    android:id="@+id/cardView"
    >

    <RelativeLayout
        android:background="@drawable/note_list"
        android:padding="10dp"
        android:elevation="100dp"
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvId"
            android:text="1"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/tvId"
            android:singleLine="true"
            android:text="mgmg45837452@gmail.com"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDateTime"
            android:text="15/2/2024     05:33:25"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_below="@id/tvDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvDes"
            android:layout_below="@id/tvTitle"
            android:text="Description is jskljflkj@glkjlkgjfkjgdljgkdjsklgjlkasjfdkg;lkdsf;"
            android:layout_toEndOf="@+id/tvId"
            android:textSize="18sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_alignStart="@id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>